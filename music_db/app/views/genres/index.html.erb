<h1>Genres</h1>

<table class="table table-condensed table-striped table-hover">
  <thead>
    <tr>
      <th>Genre</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @genres.order('genre').each do |genre| %>
      <tr>
        <td><%= genre.genre %></td>
        <td class="text-center">
          <%= link_to fa_icon('eye', text: 'Show'), genre %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('pencil', text: 'Edit'), edit_genre_path(genre) %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('trash-o', text: 'Delete'), genre, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div>
  <button class="btn btn-sm btn-default">
    <%= link_to 'New Genre', new_genre_path %>
  </button>
</div>