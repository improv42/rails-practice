<h3>Songs by <span class="text-primary"><%= @artist.name %></span></h3>
<small><%= @artist.genre.try(:genre) %></small>

<hr>
<ul>
  <% @artist.songs.order('title').each do |song| %>
    <li><%= song.title %></li>
  <% end %>
</ul>

<div>
  <button type="button" class="btn-small btn-default">
    <%= link_to 'Edit', edit_artist_path(@artist) %>
  </button>
  <button type="button" class="btn-small btn-default">
    <%= link_to 'Back', artists_path %>
  </button>
</div>
