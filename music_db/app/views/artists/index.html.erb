<h1>Artists</h1>


  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Genre</th>
      <th colspan="3" class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @artists.order('name').each do |artist| %>
      <tr>
        <td>
          <%= artist.name %>
        </td>
        <td>
          <%= artist.genre.try( :genre ) %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('eye', text: 'Show'), artist %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('pencil', text: 'Edit'), edit_artist_path(artist) %>
        </td>
        <td class="text-center">
          <%= link_to fa_icon('trash-o', text: 'Delete'), artist, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
  </table>

  <br>
  <div>
  <button class="btn btn-sm btn-default">
    <%= link_to 'New Artist', new_artist_path %>
  </button>
  </div>
