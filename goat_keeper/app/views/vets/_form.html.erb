<div class="row">
  <%= form_for(@vet) do |f| %>
    <% if @vet.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@vet.errors.count, "error") %> prohibited this vet from being saved:</h2>

        <ul>
        <% @vet.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-sm-2">
      <div class="actions">
        <button type="submit" class="btn btn-success btn-sm">
          <%= fa_icon('thumb-tack', text: 'Save Vet') %>
